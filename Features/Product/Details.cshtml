@model ProductApp.Models.Product
@{
    ViewData["Title"] = "Product Details";
}

<h1 class="display-6">Product Details</h1>
<hr />
<dl class="row">
    <dt class="col-sm-2">Id</dt>
    <dd class="col-sm-10">@Model.Id</dd>

    <dt class="col-sm-2">Name</dt>
    <dd class="col-sm-10">@Model.Name</dd>

    <dt class="col-sm-2">Price</dt>
    <dd class="col-sm-10">@Model.Price.ToString("C")</dd>

    <dt class="col-sm-2">Price + Tax</dt>
    <dd class="col-sm-10">@Model.PriceWithTax.ToString("C")</dd>
</dl>

<a class="btn btn-outline-warning" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
<a class="btn btn-outline-secondary ms-2" asp-action="Index">Back</a>
