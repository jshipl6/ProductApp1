@model List<ProductApp.Models.Product>
@{
    ViewData["Title"] = "Products";
    var search = (string)(ViewBag.Search ?? "");
}

<h1 class="display-6">Products</h1>

<div class="d-flex justify-content-between align-items-center mb-3">
    <form class="d-flex" asp-controller="Product" asp-action="Index" method="get" role="search">
        <input class="form-control me-2" type="search" name="q" value="@search" placeholder="Search by name">
        <button class="btn btn-outline-primary" type="submit">Search</button>
        @if (!string.IsNullOrWhiteSpace(search))
        {
            <a class="btn btn-link ms-2" asp-controller="Product" asp-action="Index">Clear</a>
        }
    </form>

    <a class="btn btn-primary" asp-action="Create">+ New Product</a>
</div>

<table class="table table-striped align-middle">
    <thead>
        <tr>
            <th style="width: 6rem;">Id</th>
            <th>Name</th>
            <th class="text-end" style="width: 10rem;">Price</th>
            <th class="text-end" style="width: 12rem;">Price + Tax</th>
            <th style="width: 18rem;"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var p in Model)
        {
            <tr>
                <td>@p.Id</td>
                <td>@p.Name</td>
                <td class="text-end">@p.Price.ToString("C")</td>
                <td class="text-end">@p.PriceWithTax.ToString("C")</td>
                <td class="text-end">
                    <a class="btn btn-sm btn-outline-secondary me-1" asp-action="Details" asp-route-id="@p.Id">Details</a>
                    <a class="btn btn-sm btn-outline-warning me-1" asp-action="Edit" asp-route-id="@p.Id">Edit</a>
                    <a class="btn btn-sm btn-outline-danger" asp-action="Delete" asp-route-id="@p.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
