@model List<ProductApp.Models.Product>
@{
    ViewData["Title"] = "Products";
}

<h1 class="display-6">Products</h1>

<p>
    <a class="btn btn-outline-secondary"
       asp-controller="Home" asp-action="Index">Back to Home</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th class="text-end">Price</th>
            <th class="text-end">Price + Tax</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var p in Model)
        {
            <tr>
                <td>@p.Id</td>
                <td>@p.Name</td>
                <td class="text-end">@p.Price.ToString("C")</td>
                <td class="text-end">@p.PriceWithTax.ToString("C")</td>
            </tr>
        }
    </tbody>
</table>

<hr />

<h2 class="h5">Add a product</h2>

<form asp-action="Add" asp-controller="Product" method="post">
    <div class="mb-3">
        <label>Name</label>
        <input name="Name" class="form-control" />
    </div>
    <div class="mb-3">
        <label>Price</label>
        <input name="Price" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Add</button>
</form>
