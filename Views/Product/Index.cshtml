@model List<ProductApp.Models.Product>
@{
    ViewData["Title"] = "Products";
}

<h1 class="display-6">Products</h1>

<p>
    <!-- Navigation Tag Helper -->
    <a class="btn btn-outline-secondary"
       asp-controller="Home" asp-action="Index">Back to Home</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th class="text-end">Price</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var p in Model)
        {
            <tr>
                <td>@p.Id</td>
                <td>@p.Name</td>
                <td class="text-end">@p.Price.ToString("C")</td>
            </tr>
        }
    </tbody>
</table>

<hr />

<h2 class="h5">Add a product</h2>

<!-- FORM Tag Helpers -->
<form asp-action="Add" asp-controller="Product" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="mb-3">
        <label asp-for="@(new ProductApp.Models.Product().Name)" class="form-label"></label>
        <input asp-for="@(new ProductApp.Models.Product().Name)" name="Name" class="form-control" />
        <span asp-validation-for="@(new ProductApp.Models.Product().Name)" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="@(new ProductApp.Models.Product().Price)" class="form-label"></label>
        <input asp-for="@(new ProductApp.Models.Product().Price)" name="Price" class="form-control" />
        <span asp-validation-for="@(new ProductApp.Models.Product().Price)" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Add</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
